<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:minWidth="280dp"
    android:background="@drawable/dialog_background"
    android:layout_margin="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Geometry Tool"
        android:textColor="@color/light3_green"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Các công cụ hình học trong một hàng ngang -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- Line -->
        <LinearLayout
            android:id="@+id/geometry_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_new_paper_and_list"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_geometry_line"
                android:contentDescription="Line" />
        </LinearLayout>

        <!-- Rectangle -->
        <LinearLayout
            android:id="@+id/geometry_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_new_paper_and_list"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_geometry_rectangle"
                android:contentDescription="Rectangle" />
        </LinearLayout>

        <!-- Circle -->
        <LinearLayout
            android:id="@+id/geometry_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_new_paper_and_list"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_geometry_circle"
                android:contentDescription="Circle" />
        </LinearLayout>

        <!-- Triangle -->
        <LinearLayout
            android:id="@+id/geometry_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/bg_new_paper_and_list"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_geometry_triangle"
                android:contentDescription="Triangle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút Hủy -->
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Cancel"
        android:layout_gravity="end"
        android:background="@drawable/bg_button_in_dialog"
        app:backgroundTint="@null"
        android:layout_marginTop="16dp"
        android:textColor="@color/light3_green" />
</LinearLayout>
