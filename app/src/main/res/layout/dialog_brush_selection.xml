<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/dialog_background"
        android:backgroundTint="@color/white"
        android:gravity="center_horizontal"
        android:layout_margin="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Brush Type"
            android:textColor="@color/light3_green"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Danh sách kiểu bút (đã thu nhỏ) -->
        <!-- Template Brush Item -->
        <LinearLayout
            android:id="@+id/brush_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_marker1"
                android:contentDescription="Marker" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marker"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brush_feather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_feather1"
                android:contentDescription="Feather" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Feather"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brush_pencil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_pencil1"
                android:contentDescription="Pencil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pencil"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brush_ink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_ink1"
                android:contentDescription="Ink" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ink"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brush_fountain_ink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_wool1"
                android:contentDescription="Wool" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wool"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/brush_magic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginVertical="2dp"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_brush_magic1"
                android:contentDescription="Magic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Magic"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Nút Cancel -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textSize="12sp"
            android:textColor="@color/light3_green"
            android:background="@drawable/bg_button_in_dialog"
            app:backgroundTint="@null"
            android:layout_marginTop="8dp"
            android:layout_gravity="end" />

    </LinearLayout>
</ScrollView>
