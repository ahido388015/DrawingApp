<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDialog"></style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">50%</item> <!-- Thu nhỏ dialog -->
        <item name="android:windowMinWidthMinor">50%</item> <!-- Thu nhỏ dialog -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogNegativeButton</item>
    </style>

    <style name="DialogPositiveButton">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogNegativeButton">
        <item name="android:textColor">#4CAF50</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>